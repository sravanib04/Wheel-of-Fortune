<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="container" stylesheets="@style.css" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ServerStartScreenController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label fx:id="welcomeText" text="Guess The Word!" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label contentDisplay="CENTER" text="Port">
         </Label>
         <TextField fx:id="portInput" />
      </children>
   </HBox>
  <Button fx:id="createServerBtn" onAction="#goToServerLogScreen" text="Create Server" />
</VBox>
