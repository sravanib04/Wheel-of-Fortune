<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="container" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CategorySelectionScreenController">
   <top>
      <Label text="PICK A CATEGORY" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" BorderPane.alignment="CENTER">
            <fx:define>
                <ToggleGroup fx:id="categorySelectionGroup" />
            </fx:define>
            <RadioButton fx:id="celebrityCategory" contentDisplay="CENTER" onAction="#onSelectCategory" text="CELEBRITIES">
            <toggleGroup>
               <ToggleGroup fx:id="categorySelectionGroup" />
            </toggleGroup>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="gameCategory" contentDisplay="CENTER" onAction="#onSelectCategory" text="GAMES" toggleGroup="$categorySelectionGroup">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin></RadioButton>
            <RadioButton fx:id="carCategory" contentDisplay="CENTER" onAction="#onSelectCategory" text="CARS" toggleGroup="$categorySelectionGroup">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin></RadioButton>
      </HBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>


</BorderPane>
